<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layoutDirection="ltr"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="6dp"
            android:layout_gravity="start"
            >

            <ImageView
                android:id="@+id/cartoonImg"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/cartoon_title"
                android:background="@drawable/title_background"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginEnd="16dp"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="?attr/title_color"
                tool:text="Cartoon Name" />




                <TextView
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:text="vvvvvvvvvvv"
                    android:id="@+id/episode_name"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:maxLength="25"
                    android:textSize="13sp"
                    android:textColor="?attr/infoTextColor_1"
                    />

            <LinearLayout
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/delete"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_baseline_delete_24"/>

                <ImageView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/play"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="24dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/play"/>

            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>
</layout>